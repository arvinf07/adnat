<%= form_with(model: shift) do |form| %>
  <% if shift.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(shift.errors.count, "error") %> prohibited this shift from being saved:</h2>

      <ul>
        <% shift.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  # Refactor so that hour appears as 1pm or am

  <div class="field">
    <%= form.label :start %>
    <%= form.datetime_select :start, ampm: true %>
  </div>

  <div class="field">
    <%= form.label :finish %>
    <%= form.datetime_select :finish, ampm: true %>
  </div>

  <div class="field">
    <%= form.label :break_length %>
    <%= form.number_field :break_length %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
